<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditVenueFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_1_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/name_text_input_layout"
            android:layout_alignLeft="@+id/name_text_input_layout"
            android:layout_alignRight="@+id/name_text_input_layout"
            android:layout_alignStart="@+id/name_text_input_layout"
            android:layout_below="@+id/name_text_input_layout"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">


            <EditText
                android:id="@+id/address_1_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Address Line 1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_2_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/address_1_text_input_layout"
            android:layout_alignLeft="@+id/address_1_text_input_layout"
            android:layout_alignRight="@+id/address_1_text_input_layout"
            android:layout_alignStart="@+id/address_1_text_input_layout"
            android:layout_below="@+id/address_1_text_input_layout"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/address_2_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Address Line 2" />
        </android.support.design.widget.TextInputLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_View"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignEnd="@+id/address_2_text_input_layout"
            android:layout_alignLeft="@+id/address_2_text_input_layout"
            android:layout_alignRight="@+id/address_2_text_input_layout"
            android:layout_alignStart="@+id/address_2_text_input_layout"
            android:layout_below="@+id/address_2_text_input_layout"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/map_View"
            android:layout_alignLeft="@+id/map_View"
            android:layout_alignRight="@+id/map_View"
            android:layout_alignStart="@+id/map_View"
            android:layout_below="@+id/map_View"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Save" />

    </RelativeLayout>

</ScrollView>
